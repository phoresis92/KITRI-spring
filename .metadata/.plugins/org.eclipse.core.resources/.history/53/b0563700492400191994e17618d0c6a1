<mapper namespace="com.kitri.app1.img_rep.Dao">

<resultMap id="img_rep" type="com.kitri.app1.img_rep.Rep">
	<result column="num" property="num" />
	<result column="img_num" property="img_num" />
	<result column="writer" property="writer" />
	<result column="content" property="content" />
</resultMap>

	
	<insert id="insert"  parameterType="com.kitri.app1.imgboard.ImgBoard" >
		insert into img_board values(#{num}, #{writer}, #{title}, sysdate, #{content}, #{img_path})
	</insert>
	
	<select id="selectByImgNum" parameterType="String" resultMap="imgBoardType">
		select * from img_board where writer=#{writer} order by num 
	</select>

</mapper>