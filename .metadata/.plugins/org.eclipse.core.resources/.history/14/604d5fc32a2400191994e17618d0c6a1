package com.kitri.app1.imgboard;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class ImgBoardController {
	
	@Resource(name="imgService")
	private Service service;
	
	private String path = "";
	
	public void setService(Service service) {
		this.service = service;
	}


	@ModelAttribute("BoardList")
	public List<ImgBoard> arr() {
		ArrayList<ImgBoard> list = new ArrayList<ImgBoard>();
		list = service.getAll();
		System.out.println(list);
		return list;
	}
	
	@RequestMapping("/ImgBoard/main")
	public void boardList() {
		
		System.out.println(service.getAll());
		
		
		
	}
	
	@RequestMapping("/ImgBoard/detail")
	public void boardList(@RequestParam("bNum") int num, Map<String,ImgBoard> map) {
		
		System.out.println(num);
		
		ImgBoard ib = service.getByNum(num);
		System.out.println(ib);
		map.put("ImgBoard", ib);
		
	}
	
	@RequestMapping("/ImgBoard/writeForm")
	public void writeForm() {
		
		System.out.println("writeForm");
		
	}
	
	@RequestMapping(value="/ImgBoard/write", method=RequestMethod.POST)
	public String write(ImgBoard ib) {
		
		String fileName = ib.getFile().getOriginalFilename();
		System.out.println(fileName);
		String[] str = fileName.split(".");
		int num = service.getImgNum();
		String img_path = path + str[0] + num + "." + str[1];
		String img_path = path + fileName;
		System.out.println("생성된 파일명"+img_path);
		
		File f = new File(img_path);
		try {
			ib.getFile().transferTo(f);
		}catch(IllegalStateException e) {
			e.printStackTrace();
		}catch(IOException e) {
			e.printStackTrace();
		}
		
		ib.setNum(num);
		ib.setImg_path(img_path);
		service.addImg(ib);
		return "redirect:/ImgBoard/main";
		
	}
	
	
	

}
