var idChk = 0;
$(document).ready(function(){
function idKey(){

$.ajax({
	type: 'GET',
	url: './idCheck',
	data:{
		"inputId": $('#id').val()
	},
	success: function(data){
		console.log(data)
		if(data == 'yes'){
			$('#idResult').html('아이디사용가능');
		}else{
			$('#idResult').html('기존의 아이디가 있습니다');
		}
	}
});

};
});

</script>

