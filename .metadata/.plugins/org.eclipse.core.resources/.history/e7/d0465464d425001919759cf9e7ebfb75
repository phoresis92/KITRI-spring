<script>

function cateName(num){
	var param = "num="+num;
	$.ajax({
		type: 'GET',
		url: '${pageContext.request.contextPath}/cate/getName',
		data: param,
		success: function(result){
			var data = JSON.parse(result);
			
			$('#ca').text(data.grand+" - "+data.pa+" - "+data.my);
			
		}
	})
}

</script>

